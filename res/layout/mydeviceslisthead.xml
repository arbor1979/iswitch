<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listhead"
    android:orientation="horizontal" >
 
    <Button
        android:id="@+id/quxianbutton"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/quxianbutton" />

 <Button
     android:id="@+id/bingtubutton"
     android:layout_width="50dp"
     android:layout_height="30dp"
     android:layout_marginBottom="5dp"
     android:layout_marginRight="5dp"
     android:layout_marginTop="5dp"
     android:background="@drawable/bingtubutton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >
 
    </LinearLayout>

 <TextView
     android:id="@+id/devicePrivilege"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:layout_marginBottom="2dp"
     android:layout_marginRight="10dp"
     android:layout_marginTop="2dp" />

 <TextView
     android:id="@+id/usersNum"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:layout_marginRight="20dp"
     android:text="" />

 
 
</LinearLayout>